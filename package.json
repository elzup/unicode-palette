{
  "name": "unicode-palette",
  "version": "0.0.0",
  "description": "Unicode character visualization tool - Generate grid-based character maps as SVG/PNG",
  "author": "elzup",
  "license": "MIT",
  "type": "module",
  "main": "lib/cjs/index.js",
  "module": "lib/esm/index.js",
  "types": "lib/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./lib/types/index.d.ts",
      "import": "./lib/esm/index.js",
      "require": "./lib/cjs/index.js"
    },
    "./node": {
      "types": "./lib/types/node.d.ts",
      "import": "./lib/esm/node.js",
      "require": "./lib/cjs/node.js"
    }
  },
  "repository": "elzup/unicode-palette",
  "bugs": {
    "url": "https://github.com/elzup/unicode-palette/issues"
  },
  "homepage": "https://github.com/elzup/unicode-palette#readme",
  "keywords": [
    "unicode",
    "svg",
    "png",
    "character",
    "visualization",
    "grid"
  ],
  "engines": {
    "node": ">=18"
  },
  "packageManager": "pnpm@10.25.0",
  "scripts": {
    "clean": "rimraf lib",
    "build": "pnpm clean && pnpm build:cjs && pnpm build:esm && pnpm build:types",
    "build:cjs": "tsc --project tsconfig.cjs.json && echo '{\"type\": \"commonjs\"}' > lib/cjs/package.json",
    "build:esm": "tsc --project tsconfig.esm.json",
    "build:types": "tsc --declaration --emitDeclarationOnly --outDir lib/types",
    "lint": "oxlint",
    "lint:fix": "oxlint --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepublishOnly": "pnpm build && pnpm test",
    "generate:data": "tsx scripts/generate-unicode-data.ts",
    "render:svg": "tsx src/generator/render-sample-svg.ts",
    "render:png": "tsx src/generator/render-sample.ts",
    "render:tiles": "tsx src/generator/render-script-tiles.ts"
  },
  "files": [
    "lib/"
  ],
  "sideEffects": false,
  "devDependencies": {
    "@elzup/tsconfig": "^1.1.0",
    "@types/node": "^22.0.0",
    "canvas": "^3.2.0",
    "oxlint": "^1.0.0",
    "rimraf": "^6.0.0",
    "tsx": "^4.21.0",
    "typescript": "^5.0.0",
    "vitest": "^3.0.0"
  },
  "peerDependencies": {
    "canvas": "^3.0.0"
  },
  "peerDependenciesMeta": {
    "canvas": {
      "optional": true
    }
  },
  "dependencies": {
    "zod": "^4.1.13"
  }
}
